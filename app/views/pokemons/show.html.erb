<html>
  <body>
    <style>
    body{
      background-image: url('https://images8.alphacoders.com/849/849531.jpg');
    }
    </style>
    <div style="display:flex;flex-direction:row;align-items:flex-start;width:100%;" align="center";>
      <div style="margin:auto;border:2px solid black;padding-left:45px;padding-right:45px;padding-top:auto;padding-bottom:150px;border-radius:20px;background-image: url(https://i.pinimg.com/564x/65/86/9c/65869c5405d1b266ae9cfac018735431.jpg); background-size: cover;">
    <div align="center">
      <h1 style="text-transform:capitalize;">
        <%= @pokemon.name%> | #<%= @pokemon.pokedex_number%>
      </h1>
      <img src=<%= @pokemon.sprites%> style="width:200;height:200px">
      <p style="text-transform:capitalize;font-size:30px">
        <%= @pokemon.types%>
      </p>
      <%= link_to "Replace This Pokemon", edit_pokemon_path(@pokemon), :style=>'color: white;border:2px solid black;background-color: blue;'%>
      <%= link_to "Delete This Pokemon", pokemon_path(@pokemon), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"}, :style=>'color: white;border:2px solid black;background-color: red;'%>
    </div>
  </body>
</html>
