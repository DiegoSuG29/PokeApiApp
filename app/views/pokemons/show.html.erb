<html>
  <body>
    <div align="center">
      <h1 style="text-transform:capitalize;">
        <%= @pokemon.name%> | #<%= @pokemon.pokedex_number%>
      </h1>
      <img src=<%= @pokemon.sprites%> style="width:300;height:300px">
      <p style="text-transform:capitalize;font-size:30px;">
        <%= @pokemon.types%>
      </p>
      <%= link_to "Replace This Pokemon", edit_pokemon_path(@pokemon)%>
      <%= link_to "Delete This Pokemon", pokemon_path(@pokemon), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"}%>
    </div>
  </body>
</html>
